<%- include('../partials/header.ejs') %>
<%- include('../partials/top_nav.ejs') %>
 
<main class="container">
    <form class="form" method="POST" action="/contact/send">
        <div class="form-group">
          <label for="cName">Full name</label>
          <input type="text" class="form-control" id="cName" name="cName" placeholder="e.g. Pavel Nam">
        </div>
        <div class="form-group">
          <label for="cEmail">Email</label>
          <input type="text" class="form-control" id="cEmail" name="cEmail" placeholder="e.g. pavelnam@gmail.com">
      </div>
        <div class="form-group">
            <label for="cNumber">Phone Number</label>
            <input type="text" class="form-control" id="cNumber" name="cNumber" placeholder="e.g. 437-123-1234">
        </div>
      <div class="form-group">
        <label for="cMessage">Text Message</label>
        <textarea class="form-control" id="cMessage" name="cMessage" placeholder="e.g. Type your text message here"></textarea>
    </div>
        <br>
        <button type="submit" class="btn btn-primary">Send</button>
      </form>
</main>

